{
  "name": "root",
  "private": true,
  "repository": "git@github.com:modernweb-pl/vue-nest-monorepo.git",
  "author": "ModernWeb <biuro@modernweb.pl>",
  "workspaces": {
    "packages": [
      "apps/*",
      "libs/*"
    ],
    "nohoist": [
      "**/@vue/cli-service"
    ]
  },
  "scripts": {
    "api": "yarn workspace @app/api",
    "web": "yarn workspace @app/web",
    "bootstrap": "lerna bootstrap",
    "format": "prettier --write '**/*.{js,jsx,ts,tsx,vue,html,scss,json}'",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx,.vue .",
    "lint:fix": "eslint --ext .js,.jsx,.ts,.tsx,.vue --fix ."
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.17.0",
    "@typescript-eslint/parser": "^2.17.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "lerna": "^3.20.2",
    "lint-staged": "^10.0.4",
    "prettier": "^1.19.1",
    "yorkie": "^2.0.0"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,vue,html,scss,json}": [
      "eslint --ext .js,.jsx,.ts,.tsx,.vue --fix",
      "git add"
    ]
  }
}
